  </section>

  <section id="contact">
    <h1>Say Hello</h1>
  <div class="form-container">
	<%= form_for Contact.new do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name, required: true, placeholder: 'Name' %>

		<br>

		<%= f.label :email %><br>
		<%= f.email_field :email, required: true, placeholder: 'Email'%>

		<br>

		<%= f.label :message %><br>
		<%= f.text_area :message, as: :text, placeholder: 'Message' %>

		<div class="hidden">
			<%= f.label :nickname %><br>
			<%= f.text_field :nickname, hint: 'leave this field blank' %>
		</div>

    <br>

		<%= f.submit 'Send Message', class: "button" %>
	<% end %>
</div>
