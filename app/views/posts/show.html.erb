<body>

  <header id="top" class="header">
    <nav class="navbar">
      <div class="collapse navbar-collapse" id="navbarNav">

        <ul class="nav navbar-nav    navbar-right">
          <li class="nav-item active">
            <a href=" <%= "root_path" %>">Portfolio</a>
              <li class="nav-item">
                <a href=" <%= posts_path %>" >Blog</a>
              </li>
        </ul>

      </div>
      </div>
      <!-- /container -->
    </nav>

  </header>
  <header>
    <div id="post_show_content" class="skinny_wrapper wrapper_padding">
        <h1><%= @post.title %></h1>
        <p class="date"><%= @post.created_at.strftime("%A, %B, %d") %></p>
        <span class="divider"></span>
    </div>
  </header>

  <div class="content">
    <p><%= markdown @post.content %></p>
    <% if user_signed_in? %>
    		<div id="admin_links">
    			<%= link_to "Edit Post", edit_post_path(@post) %>
    			<%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
    		</div>
    	<% end %>
      </div>


